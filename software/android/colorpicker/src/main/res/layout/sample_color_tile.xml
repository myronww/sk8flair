<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.skateflair.colorpicker.ColorTile
        android:background="#000000"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingLeft="20dp"
        android:paddingBottom="40dp"
        colorpicker:SampleColor="#33b5e5"
        colorpicker:SelectColor="#ffffff"
        colorpicker:IsSelected="true"
        colorpicker:LockSquare="true"
        colorpicker:CornerRounding="20"/>

</FrameLayout>
