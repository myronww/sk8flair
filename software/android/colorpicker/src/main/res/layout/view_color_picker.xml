<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <com.skateflair.colorpicker.ColorPaletteView
                android:id="@+id/colorpicker_palette"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>

        <com.skateflair.colorpicker.ColorTile
            android:id="@+id/colorpicker_sample"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20px"
            android:layout_weight="5"
            colorpicker:CornerRounding="20"
            colorpicker:SampleColor="@color/red" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_marginTop="40px">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10px">
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/red"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample02"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/redorange"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/orange"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample04"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/yellow"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample05"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/ltyellowgreen"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample06"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/yellowgreen"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample07"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/green"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample08"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/ltgreen"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample09"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/greencyan"
                colorpicker:CornerRounding="20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10px"
            >
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample10"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/magentared"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample11"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/darkmagenta"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample12"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/magenta"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample13"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/violet"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample14"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/blueviolet"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample15"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/blue"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample16"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/bluecyan"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample17"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/ltbluecyan"
                colorpicker:CornerRounding="20"/>
            <com.skateflair.colorpicker.ColorTile
                android:id="@+id/colorsample18"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10px"
                android:layout_weight="1"
                colorpicker:SampleColor="@color/cyan"
                colorpicker:CornerRounding="20"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>